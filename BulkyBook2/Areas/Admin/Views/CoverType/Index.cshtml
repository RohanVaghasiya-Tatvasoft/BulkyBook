@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-warning">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp;
                Create New CoverType
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                CoverType Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" style="width:180px" asp-action="Edit" asp-controller="CoverType" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil"></i>
                                Edit
                            </a>
                            <a class="btn btn-warning mx-3" style="width:200px" asp-action="Delete" asp-controller="CoverType" asp-route-id="@obj.Id">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

</div>